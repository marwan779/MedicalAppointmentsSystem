<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MedicalAppointmentsSystem</title>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MedicalAppointmentsSystem.styles.css" asp-append-version="true" />

    <style>
        /* Custom footer styling to match medical theme */
        .footer {
        background-color: #3498db; /* Primary blue color */
        color: white;
        padding: 1.1 rem 0;
        margin-top: 2rem;
        }

        .footer a {
        color: #f8f9fa; /* Light color for links */
        text-decoration: none;
        transition: color 0.2s ease;
        }

        .footer a:hover {
        color: white;
        text-decoration: underline;
        }

        .footer-content {
        display: flex;
        justify-content: space-between;
        align-items: center;
        }

        .footer-links {
        display: flex;
        gap: 1.5rem;
        }

        .social-icons {
        display: flex;
        gap: 1rem;
        font-size: 1.25rem;
        }
    </style>


@*     @RenderSection("Styles", required: false)
 *@</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">MedicalAppointmentsSystem</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @* <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li> *@

                        @if (User.IsInRole(StaticDetails.DoctorRole))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="Doctor" asp-controller="Doctor" asp-action="Index">Doctor Profile</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="Doctor" asp-controller="Clinic" asp-action="Index">Clinics Management</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="Doctor" asp-controller="UserAppointmentResponses" asp-action="Index">Appointments Management</a>
                            </li>
                        }


                        @if (User.IsInRole(StaticDetails.UserRole))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="User" asp-controller="UserAppointments" asp-action="Index">Appointments Requests</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="User" asp-controller="Complaints" asp-action="Index">Complaints  Management</a>
                            </li>
                        }

                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer">
        <div class="container footer-content">
            <div>
                &copy; 2025 - MedicalAppointmentsSystem
            </div>
            <div class="footer-links">
                <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy Policy</a>
                <a asp-area="" asp-controller="Home" asp-action="Index">Terms of Service</a>
                <a asp-area="" asp-controller="Home" asp-action="Index">Contact Us</a>
            </div>
            <div class="social-icons">
                <a href="#" aria-label="Facebook"><i class="fab fa-facebook"></i></a>
                <a href="#" aria-label="Twitter"><i class="fab fa-twitter"></i></a>
                <a href="#" aria-label="Instagram"><i class="fab fa-instagram"></i></a>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>