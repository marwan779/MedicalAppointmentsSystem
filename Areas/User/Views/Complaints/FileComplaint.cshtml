@using MedicalAppointmentsSystem.Areas.User.Models.ViewModels
@model AddComplaintVM
@{
    ViewData["Title"] = "File a Complaint";
    Layout = "_Layout";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0"><i class="fas fa-exclamation-triangle me-2"></i>@ViewData["Title"]</h3>
                </div>
                <div class="card-body">
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @TempData["Error"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    <form asp-action="FileComplaint" method="post" enctype="multipart/form-data">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="ClinicId" class="form-label"><i class="fas fa-clinic-medical me-1"></i> Clinic*</label>
                                    <select asp-for="ClinicId" class="form-select" asp-items="ViewBag.ClinicsList">
                                        <option value="">-- Select Clinic --</option>
                                    </select>
                                    <span asp-validation-for="ClinicId" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="ComplaintTitle" class="form-label"><i class="fas fa-heading me-1"></i> Complaint Title*</label>
                                    <input asp-for="ComplaintTitle" class="form-control" placeholder="Brief description of your complaint" />
                                    <span asp-validation-for="ComplaintTitle" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Document" class="form-label"><i class="fas fa-file-pdf me-1"></i> Supporting Document</label>
                                    <div class="input-group">
                                        <input asp-for="Document" type="file" class="form-control" accept=".pdf" />
                                        <button class="btn btn-outline-secondary" type="button" id="clearFile">
                                            <i class="fas fa-times"></i>
                                        </button>
                                    </div>
                                    <small class="text-muted">Upload any relevant documents (PDF only, max 5MB)</small>
                                    <span asp-validation-for="Document" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ComplaintBody" class="form-label"><i class="fas fa-comment-dots me-1"></i> Complaint Details*</label>
                            <textarea asp-for="ComplaintBody" class="form-control" rows="5"
                                      placeholder="Please describe your complaint in detail"></textarea>
                            <span asp-validation-for="ComplaintBody" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Index" class="btn btn-outline-secondary me-md-2">
                                <i class="fas fa-arrow-left me-1"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-paper-plane me-1"></i> Submit Complaint
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

    <style>
        .card {
            border-radius: 10px;
            transition: transform 0.3s ease;
        }

        .card:hover {
            transform: translateY(-3px);
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        }

        .card-header {
            border-radius: 10px 10px 0 0 !important;
        }

        textarea {
            min-height: 150px;
            resize: vertical;
        }

        .form-control:focus, .form-select:focus {
            border-color: var(--medical-primary);
            box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
        }

        #clearFile {
            border-color: #ced4da;
            border-left: 0;
        }
    </style>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // File validation
            document.getElementById('Document').addEventListener('change', function(e) {
                const file = e.target.files[0];
                if (file) {
                    if (file.size > 5 * 1024 * 1024) { // 5MB
                        alert('File size exceeds 5MB limit');
                        e.target.value = '';
                    } else if (file.type !== 'application/pdf') {
                        alert('Only PDF files are allowed');
                        e.target.value = '';
                    }
                }
            });

            // Clear file input
            document.getElementById('clearFile').addEventListener('click', function() {
                document.getElementById('Document').value = '';
            });
        });
    </script>
}