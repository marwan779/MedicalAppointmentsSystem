@using MedicalAppointmentsSystem.Areas.Doctor.Models
@model DoctorComplaintResponseVM
@{
    ViewData["Title"] = "Respond to Complaint";
    Layout = "_Layout";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0"><i class="fas fa-comment-medical me-2"></i>@ViewData["Title"]</h3>
                </div>
                <div class="card-body">
                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @TempData["Success"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    <form asp-action="RespondToComplaint" method="post">
                        <input type="hidden" asp-for="ComplaintId" value="@ViewBag.ComplaintId" />

                        <div class="mb-4">
                            <h5 class="text-primary">Complaint #@ViewBag.ComplaintId</h5>
                            <p class="text-muted">Please provide a detailed response to the patient's complaint</p>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Response" class="form-label fw-bold">Your Response</label>
                            <textarea asp-for="Response" class="form-control" rows="8"
                                      placeholder="Enter your detailed response here..."></textarea>
                            <span asp-validation-for="Response" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left me-2"></i>Back to List
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-paper-plane me-2"></i>Submit Response
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

    <style>
        .card {
            border-radius: 10px;
            border: none;
        }

        .card-header {
            border-radius: 10px 10px 0 0 !important;
        }

        textarea {
            min-height: 200px;
            resize: vertical;
        }

        .form-control:focus {
            border-color: var(--medical-primary);
            box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.15);
        }
    </style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}