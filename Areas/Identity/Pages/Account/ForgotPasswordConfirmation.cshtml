@page
@model ForgotPasswordConfirmation
@{
    ViewData["Title"] = "Forgot password confirmation";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white">
                    <h1 class="text-center"><i class="fas fa-envelope me-2"></i>@ViewData["Title"]</h1>
                </div>
                <div class="card-body text-center">
                    <div class="mb-4">
                        <i class="fas fa-envelope-circle-check text-primary" style="font-size: 3rem;"></i>
                    </div>
                    <p class="lead">
                        Please check your email to reset your password.
                    </p>
                    <div class="alert alert-info mt-4">
                        <i class="fas fa-info-circle me-2"></i>
                        If you don't see the email, please check your spam folder.
                    </div>
                    <div class="mt-4 pt-3 border-top">
                        <a asp-page="./Login" class="btn btn-outline-primary">
                            <i class="fas fa-arrow-left me-2"></i>Return to Login
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .fa-envelope-circle-check {
        position: relative;
    }
    .fa-envelope-circle-check:before {
        content: "\f0e0"; /* envelope icon */
        font-size: 3rem;
    }
    .fa-envelope-circle-check:after {
        content: "\f058"; /* check circle icon */
        position: absolute;
        bottom: -5px;
        right: -5px;
        font-size: 1.5rem;
        color: var(--medical-success);
        background: white;
        border-radius: 50%;
    }
</style>