@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <!-- Changed from col-md-8 to col-md-6 since we only need one column now -->
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white">
                    <h1 class="text-center"><i class="fas fa-sign-in-alt me-2"></i>@ViewData["Title"]</h1>
                </div>
                <div class="card-body">
                    <section>
                        <form id="account" method="post">
                            <h2 class="h4 mb-4 text-primary">Access your medical account</h2>
                            <hr class="my-3" />
                            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                            <div class="form-floating mb-3">
                                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                                <label asp-for="Input.Email" class="form-label">Email</label>
                                <span asp-validation-for="Input.Email" class="text-danger small"></span>
                            </div>

                            <div class="form-floating mb-3">
                                <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                                <label asp-for="Input.Password" class="form-label">Password</label>
                                <span asp-validation-for="Input.Password" class="text-danger small"></span>
                            </div>

                            <div class="mb-3 form-check">
                                <input class="form-check-input" asp-for="Input.RememberMe" />
                                <label class="form-check-label" asp-for="Input.RememberMe">
                                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                                </label>
                            </div>

                            <div class="mb-4">
                                <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">
                                    <i class="fas fa-sign-in-alt me-2"></i>Log in
                                </button>
                            </div>

                            <div class="d-flex flex-column gap-2">
                                <a id="forgot-password" asp-page="./ForgotPassword" class="text-decoration-none p-2 ps-3 rounded-pill bg-primary-light">
                                    <i class="fas fa-key me-2 text-primary"></i>
                                    <span class="text-dark">Forgot your password?</span>
                                </a>
                                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-decoration-none p-2 ps-3 rounded-pill bg-primary-light">
                                    <i class="fas fa-user-plus me-2 text-primary"></i>
                                    <span class="text-dark">Register as a new user</span>
                                </a>
                                @* <a id="resend-confirmation" asp-page="./ResendEmailConfirmation" class="text-decoration-none p-2 ps-3 rounded-pill bg-primary-light">
                                    <i class="fas fa-envelope me-2 text-primary"></i>
                                    <span class="text-dark">Resend email confirmation</span>
                                </a> *@
                            </div>
                        </form>
                    </section>

                    <div class="mt-4 pt-3 border-top">
                        <p class="text-muted small">
                            <i class="fas fa-info-circle me-2"></i>Secure login for medical professionals and patients.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    .bg-primary-light {
        background-color: rgba(52, 152, 219, 0.1);
        transition: all 0.2s ease;
    }

        .bg-primary-light:hover {
            background-color: rgba(52, 152, 219, 0.2);
        }
</style>